	<style>
   		.layout-main {
		    margin-top: 72px;
		    margin-bottom: 72px;
		}
   		.valign-wrapper {
		    display: -webkit-box;
		    display: -webkit-flex;
		    display: -ms-flexbox;
		    display: flex;
		    -webkit-box-align: center;
		    -webkit-align-items: center;
		    -ms-flex-align: center;
		    align-items: center;
		    height: calc(100vh - 144px);
		    flex-wrap: wrap;
		}
		.despliega-inline-block {
			display: inline-block;
			margin: 0 15px;
		}
		.full-width {
			width: 100%;
		}
		@media only screen and (max-width: 992px) {
			.despliega-inline-block {
				width: 180px;
			}
		}
