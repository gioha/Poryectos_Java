/** ******************************* TURNADO ******************************* **/
div.ui-dialog.ui-widget.ui-widget-content.ui-corner-all.ui-shadow.ui-hidden-container.ui-draggable.dialog-turnado{
	border: solid 1px #D5007F !important;
	/* box-shadow:none !important; */
	 /* box-shadow: 0px 5px 10px rgba(0,0,0,0.3) !important; */
}

.dialog-turnado {
	font-size: 12px;
}

.dialog-turnado section {
	padding: 0px 0px 0px;	
}

.dialog-turnado h4{
	padding: 0px 0px 0px;
}

.titulo_turnado{
	color:#D5007F;
	font-size:12pt;
	font-weight: bold;
	margin-left: 20px;
}

h4#tituloDetalle:after{
	border-bottom: 4pt solid #d6007e !important;
}

.instrucciones_dialog{
	color:black;
	font-family:Roboto;
	font-size:9pt;
	font-weight:normal;
	margin-left: 20px;
}
#line_dialog_turnado{
	border-top: 1pt solid #D5007F;
	box-shadow: 0px 3px 10px grey;
	margin: 0px;
}
#row_instrucciones{
	/* border-bottom: 1pt solid #D5007F; */
	/* box-shadow: 0px 10px 0px 0px grey; */
}

#row_instrucciones_atencion{
	padding: 20px 0px 0px 20px;
}

.titulo_instrucciones_atencion{
	color:#E30613;
	font-size:9pt;
	font-weight:bold;
}

#row_instrucciones_informativas{
	padding: 5px 0px 0px 20px;
}

.titulo_instrucciones_informativas{
	color:#39B54A;
	font-size:9pt;
	font-weight:bold;
}

.lista-instrucciones {
    line-height: normal;
}

.lista-instrucciones li.ui-datalist-item{
	color:black !important;
	font-family: Roboto !important;
	font-size:9pt !important;
}

.lista-instrucciones ol {
	padding-left: 0px;
}

.lista-instrucciones .ui-widget-content {
	border:0px;
}

.instrucciones_turnado{
	color:#D5007F;
	font-family:Roboto;
	font-size:9pt;
	font-weight:bold;
}

