<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:pe="http://primefaces.org/ui/extensions"
	xmlns:sec="http://www.springframework.org/security/tags">
	
	<p:dialog 	id="dialogRegistrarAtencion"
				widgetVar="dialogRegistrarAtencion"
				modal="true"
				height="200" width="400" resizable="false">

		<h3>Registrar Atención</h3>
		<hr/>
		<div class="row">
			<div class="col-sm-12">
				<p class="instrucciones">Seleccione los criterios de búsqueda que requiera</p>
			</div>
		</div>
		<div class="row">
		
			<!-- Vista para la bandeja de Entrada -->
			<c:if test="#{mbBandejaMenu.menuBandejaSeleccionado eq messageSource['vista_entrada'] and mbBEntrada.indicaSeleccionado ne null}">
				<div class="col-sm-6">
					<p:selectOneRadio value="#{mbBEntrada.atencionTurnado}"  layout="grid" columns="2" styleClass="radio_registar_concluido">
						<p:ajax listener="#{mbBEntrada.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_concluir']}" itemValue="#{messageSource['id_estatus_concluido']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBEntrada.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_rechazado">
						<p:ajax listener="#{mbBEntrada.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_rechazar']}" itemValue="#{messageSource['id_estatus_rechazado']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBEntrada.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_reasignado">
						<p:ajax listener="#{mbBEntrada.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_reasignar']}" itemValue="#{messageSource['id_estatus_reasignado']}" />
					</p:selectOneRadio>
				</div>
				
				<div class="col-sm-6">	
					<p:selectOneRadio value="#{mbBEntrada.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_atencion">
						<p:ajax listener="#{mbBEntrada.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_atendiendo']}" itemValue="#{messageSource['id_estatus_enatencion']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBEntrada.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_enespera">
						<p:ajax listener="#{mbBEntrada.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_enespera']}" itemValue="#{messageSource['id_estatus_enespera']}" />
					</p:selectOneRadio>
					
				</div>
			</c:if>
			
			<!-- Vista para la bandeja de Historico -->
			<c:if test="#{mbBandejaMenu.menuBandejaSeleccionado eq messageSource['vista_historico'] and mbBHistorico.indicaSeleccionado ne null}">
				<div class="col-sm-6">
					<p:selectOneRadio value="#{mbBHistorico.atencionTurnado}"  layout="grid" columns="2" styleClass="radio_registar_concluido">
						<p:ajax listener="#{mbBHistorico.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_concluir']}" itemValue="#{messageSource['id_estatus_concluido']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBHistorico.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_rechazado">
						<p:ajax listener="#{mbBHistorico.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_rechazar']}" itemValue="#{messageSource['id_estatus_rechazado']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBHistorico.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_reasignado">
						<p:ajax listener="#{mbBHistorico.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_reasignar']}" itemValue="#{messageSource['id_estatus_reasignado']}" />
					</p:selectOneRadio>
				</div>
				
				<div class="col-sm-6">	
					<p:selectOneRadio value="#{mbBHistorico.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_atencion">
						<p:ajax listener="#{mbBHistorico.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_atendiendo']}" itemValue="#{messageSource['id_estatus_enatencion']}" />
					</p:selectOneRadio>
					
					<p:selectOneRadio value="#{mbBHistorico.atencionTurnado}" layout="grid" columns="2" styleClass="radio_registar_enespera">
						<p:ajax listener="#{mbBHistorico.registrarAtencion()}" event="valueChange" 
								update=":formBorradores:dialogRegistrarAtencion, :formBorradores:dialogConfirmacionConcluido, :formBorradores:panelCentro,mensaje_general_info,mensaje_general_advertencia,mensaje_general_exito"/>
						<f:selectItem itemLabel="#{messageSource['mensaje_registrar_atencion_enespera']}" itemValue="#{messageSource['id_estatus_enespera']}" />
					</p:selectOneRadio>
					
				</div>
			</c:if>
		</div>

	</p:dialog>
</ui:composition>