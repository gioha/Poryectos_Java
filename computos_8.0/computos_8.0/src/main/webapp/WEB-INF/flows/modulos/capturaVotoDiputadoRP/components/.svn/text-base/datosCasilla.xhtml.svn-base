<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
				xmlns:c="http://java.sun.com/jsp/jstl/core"
				xmlns:fn="http://java.sun.com/jsp/jstl/functions"
				xmlns:ui="http://java.sun.com/jsf/facelets"
				xmlns:h="http://java.sun.com/jsf/html"
				xmlns:f="http://java.sun.com/jsf/core"
				xmlns:p="http://primefaces.org/ui"
				xmlns:pe="http://primefaces.org/ui/extensions"
				xmlns:sf="http://www.springframework.org/tags/faces"
				xmlns:sec="http://www.springframework.org/security/tags">

	<div class="ui-g">
		<c:choose>
			<c:when test="#{mbCapActaDRP.action eq 'idCaptura'}">
				<h4>#{messageSource['etiqueta_regVotacion_subTitModulo_cap']}</h4>
			</c:when>
			<c:when test="#{mbCapActaDRP.action eq 'idConsulta'}">
				<h4>#{messageSource['etiqueta_regVotacion_subTitModulo_con']}</h4>
			</c:when>
			<c:when test="#{mbCapActaDRP.action eq 'idModifica'}">
				<h4>#{messageSource['etiqueta_regVotacion_subTitModulo_mod']}</h4>
			</c:when>
		</c:choose>
	</div>

	<p:outputPanel id="id_panelCasillas" >
		<div class="ui-g">
			<div class="ui-g-12">
				<div class="ui-g-12 ui-md-4 md-selectfield">
					<!-- DISTRITOS -->
					<p:outputLabel for="id_distrito" value="#{messageSource['etiqueta_distrito']}:" />
					<p:selectOneMenu styleClass="form-control"
									 id="id_distrito"
									 value="#{mbCapActaDRP.form.acta.idDistrito}" 
									 requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}"
									 required="#{mbCapActaDRP.form.requiredDistrito}" >

						<f:selectItem itemValue="0" itemLabel="#{messageSource['etiqueta_generales_selecciona']}"/>
						<f:selectItems value="#{mbCapActaDRP.carga.distritos}" />

						<p:ajax event="change"
								update="@form" 
						        process="@this id_seccion" 
						        listener="#{mbCapActaDRP.cargaSecciones}"
						        onstart="PF('progress').block()" 
						      	onsuccess="PF('progress').unblock()"/>

						<p:ajax event="change" update="msj_distrito" />
					</p:selectOneMenu>
					<p:message id="msj_distrito" for="id_distrito" />
				</div>

				<div class="ui-g-12 ui-md-4 md-selectfield">
					<!-- SECCION -->
					<p:outputLabel for="id_seccion" value="#{messageSource['etiqueta_seccion']}:" />
					<p:selectOneMenu styleClass="form-control"
									 id="id_seccion"
									 value="#{mbCapActaDRP.form.acta.seccion}" 
									 requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}"
									 required="#{mbCapActaDRP.form.requiredSeccion}" >

						<f:selectItem itemValue="0" itemLabel="#{messageSource['etiqueta_generales_selecciona']}"/>
						<f:selectItems value="#{mbCapActaDRP.carga.secciones}" />

						<p:ajax event="change"
								update="@form" 
						        process="@this id_casilla #{mbCapActaDRP.action ne 'idConsulta' ? id_estatusActa : ''}" 
						        listener="#{mbCapActaDRP.cargaCasillas}"
						        onstart="PF('progress').block()" 
						      	onsuccess="PF('progress').unblock()"/>

						<p:ajax event="change" update="msj_seccion" />
					</p:selectOneMenu>
					<p:message id="msj_seccion" for="id_seccion" />
				</div>

				<!-- CASILLA -->
				<div class="ui-g-12 ui-md-4 md-selectfield">
					<p:outputLabel for="id_casilla" value="#{messageSource['etiqueta_casilla']}:" />
					<p:selectOneMenu styleClass="form-control" 
									 id="id_casilla"
									 value="#{mbCapActaDRP.form.acta.cveCasilla}" 
									 requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}"
									 required="#{mbCapActaDRP.form.requiredCasilla}" >

						<f:selectItem itemValue="0" itemLabel="#{messageSource['etiqueta_generales_selecciona']}"/>

						<!-- NOTA: Tener cuidado en itemValue, ya que si le damos espacios a la cadena que se forma ya no funcionara correctamente -->
						<f:selectItems value="#{mbCapActaDRP.carga.casillas}" 
									   var="objeto"
									   itemLabel="#{objeto.nombreCasilla}"
									   itemValue="#{objeto.seccion}-#{objeto.tipoCasilla}-#{objeto.idCasilla}#{objeto.extContigua > 0 ? '-' + objeto.extContigua : ''}" />

						<p:ajax event="change"
								update="@form" 
						        process="@this #{mbCapActaDRP.action ne 'idConsulta' ? id_estatusActa : ''}" 
						        listener="#{mbCapActaDRP.cargaInformacionEnCasilla}"
						        onstart="PF('progress').block()" 
						      	onsuccess="PF('progress').unblock()" />

						<p:ajax event="change" update="msj_casilla" />
					</p:selectOneMenu>
					<p:message id="msj_casilla" for="id_casilla"  />
				</div>
			</div>

			<!-- ESTATUS ACTA -->
			<div class="ui-g-12">
				<div class="ui-g-12 ui-md-4 md-selectfield">
					<c:if test="#{mbCapActaDRP.action ne 'idConsulta'}" >
						<p:outputLabel for="id_estatusActa" value="#{messageSource['etiqueta_estatus_acta']}:" />
						<p:selectOneMenu styleClass="form-control" 
										 disabled="#{mbCapActaDRP.form.disabledEstatus or mbCapActaDRP.form.acta.idEstatusActa eq 5}"
										 id="id_estatusActa"
										 value="#{mbCapActaDRP.form.acta.idEstatusActa}" 
										 requiredMessage="#{messageSource['validacion_mensajes_generales_dato_requerido']}"
										 required="#{mbCapActaDRP.form.requiredCasilla}" >

							<f:selectItem itemValue="0" itemLabel="#{messageSource['etiqueta_generales_selecciona']}"/>

							<f:selectItems value="#{mbCapActaDRP.carga.estatusCasilla}" 
										   var="objeto"
										   itemLabel="#{objeto.descripcion}"
										   itemValue="#{objeto.idEstatus}" />

							<p:ajax event="change"
									update="@form" 
							        process="@this" 
							        listener="#{mbCapActaDRP.cargaInformacionEnEstatus}"
							        onstart="PF('progress').block()" 
							      	onsuccess="PF('progress').unblock()"/>
	
							<p:ajax event="change" update="msj_estatusActa" />
						</p:selectOneMenu>
						<p:message id="msj_estatusActa" for="id_estatusActa"  />
					</c:if>			
					<c:if test="#{mbCapActaDRP.action eq 'idConsulta'}" >
						<p>
							<p:outputLabel value="#{messageSource['etiqueta_estatus_acta']}:" />
						</p>
						<p>
							<h:outputText value="#{mbCapActaDRP.form.acta.desEstatusActa}" />
						</p>
					</c:if>						
				</div>
			</div>
		</div>
	</p:outputPanel>
</ui:composition>
